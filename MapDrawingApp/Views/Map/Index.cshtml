@{
    ViewData["Title"] = "Map Drawing";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/map.css" />
    <style>
        /* ONLY LAYOUT CHANGES - Keep all existing functionality */

        /* Top Toolbar */
        .top-toolbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 70px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            z-index: 1000;
            overflow-x: auto;
        }

        .toolbar-group {
            display: flex;
            gap: 8px;
            align-items: center;
            padding-right: 15px;
            border-right: 1px solid rgba(255,255,255,0.2);
        }

            .toolbar-group:last-child {
                border-right: none;
                margin-left: auto;
            }

        .top-toolbar .btn {
            background: rgba(255,255,255,0.15);
            border: 1px solid rgba(255,255,255,0.3);
            color: white;
            padding: 8px 12px;
            font-size: 13px;
            white-space: nowrap;
        }

            .top-toolbar .btn:hover {
                background: rgba(255,255,255,0.25);
            }

            .top-toolbar .btn.active {
                background: white;
                color: #667eea;
                font-weight: 600;
            }

        /* Left Sidebar - Move to left, adjust top */
        .sidebar {
            position: fixed;
            left: 0;
            top: 70px;
            bottom: 0;
            width: 280px;
            z-index: 900;
        }

        /* Canvas Area - Adjust for new layout */
        .canvas-area-wrapper {
            position: fixed;
            left: 280px;
            top: 70px;
            right: 0;
            bottom: 0;
        }

        #canvas-container {
            height: calc(100% - 40px);
        }

        .status-bar {
            position: fixed;
            bottom: 0;
            left: 280px;
            right: 0;
        }

        /* Hide old row/col structure */
        .container-fluid, .row {
            height: auto;
        }

        .col-md-2, .col-md-10 {
            max-width: none;
            flex: none;
        }
    </style>
</head>
<body>

    <!-- TOP TOOLBAR (New) -->
    <!-- TOP TOOLBAR (Grouped with Dropdowns) -->
    <div class="top-toolbar">
        <!-- Select Tool -->
        <div class="toolbar-group">
            <button id="selectBtn" class="btn btn-sm">
                <i class="bi bi-cursor-fill"></i> Chọn
            </button>
        </div>

        <!-- Drawing Tools - GROUPED -->
        <div class="toolbar-group">
            <div class="btn-group" id="shapesGroup">
                <button type="button" class="btn btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="bi bi-shapes"></i> <span id="currentShapeName">Hình vẽ</span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item" href="#" id="rectDropdown" onclick="setTool('rect'); return false;">
                            <i class="bi bi-square"></i> Chữ nhật
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" id="circleDropdown" onclick="setTool('circle'); return false;">
                            <i class="bi bi-circle"></i> Hình tròn
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" id="ellipseDropdown" onclick="setTool('ellipse'); return false;">
                            <i class="bi bi-egg"></i> Ellipse
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" id="triangleDropdown" onclick="setTool('triangle'); return false;">
                            <i class="bi bi-triangle"></i> Tam giác
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" id="starDropdown" onclick="setTool('star'); return false;">
                            <i class="bi bi-star"></i> Ngôi sao
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" id="polygonDropdown" onclick="setTool('polygon'); return false;">
                            <i class="bi bi-hexagon"></i> Đa giác
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" href="#" id="lineDropdown" onclick="setTool('line'); return false;">
                            <i class="bi bi-dash-lg"></i> Đường thẳng
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" id="arrowDropdown" onclick="setTool('arrow'); return false;">
                            <i class="bi bi-arrow-right"></i> Mũi tên
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Content Tools -->
        <div class="toolbar-group">
            <button id="textBtn" class="btn btn-sm">
                <i class="bi bi-fonts"></i> Text
            </button>
            <button id="imageBtn" class="btn btn-sm">
                <i class="bi bi-image"></i> Ảnh
            </button>
            <input type="file" id="imageInput" accept="image/*" style="display: none;">
        </div>

        <!-- Actions -->
        <div class="toolbar-group">
            <button id="deleteBtn" class="btn btn-sm">
                <i class="bi bi-trash"></i> Xóa
            </button>
            <button id="clearBtn" class="btn btn-sm">
                <i class="bi bi-x-circle"></i> Xóa hết
            </button>
            <button id="saveBtn" class="btn btn-sm">
                <i class="bi bi-save"></i> Lưu
            </button>

            <div class="btn-group">
                <button class="btn btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="bi bi-download"></i> Xuất/Nhập
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item" href="#" onclick="exportAsImage(); return false;">
                            <i class="bi bi-file-image"></i> Xuất PNG
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" onclick="exportAsJSON(); return false;">
                            <i class="bi bi-file-code"></i> Xuất JSON
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" onclick="exportAsSVG(); return false;">
                            <i class="bi bi-file-earmark-code"></i> Xuất SVG
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" href="#" onclick="importFromJSON(); return false;">
                            <i class="bi bi-upload"></i> Nhập JSON
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Map Manager -->
        <div class="toolbar-group">
            <button id="mapManagerBtn" class="btn btn-sm" onclick="openMapManager()">
                <i class="bi bi-map"></i> Quản lý
            </button>
            <button class="btn btn-sm" onclick="showCanvasSizeSettings()">
                <i class="bi bi-aspect-ratio"></i> Kích thước
            </button>
        </div>

        <!-- Current Map (Right) -->
        <div class="toolbar-group">
            <small style="opacity: 0.8;">Hiện tại:</small>
            <strong id="sidebarCurrentMapName" style="font-size: 13px;">...</strong>
        </div>
    </div>

    <!-- OLD STRUCTURE (Keep for compatibility) -->
    <div class="container-fluid">
        <div class="row">
            <!-- LEFT SIDEBAR (Moved but keep same code) -->
            <div class="col-md-2 sidebar">
                <h4 class="mb-3" style="font-size: 14px;">
                    <i class="bi bi-sliders"></i> Thuộc tính
                </h4>

                <!-- All existing sidebar content - EXACTLY THE SAME -->
                <!-- Selected object info -->
                <div id="selectedObjectInfo" class="alert alert-info py-1 px-2 mb-2" style="font-size: 11px;">
                    <i class="bi bi-info-circle"></i> Chưa chọn
                </div>

                <div class="properties">
                    <!-- Position (X, Y) -->
                    <div class="property-section mb-3">
                        <label class="form-label mb-1 fw-bold" style="font-size: 12px;">
                            <i class="bi bi-pin-map"></i> Vị trí
                        </label>
                        <div class="row g-2">
                            <div class="col-6">
                                <label style="font-size: 11px;">X:</label>
                                <input type="number" id="positionX" class="form-control form-control-sm"
                                       value="0" step="1" disabled>
                            </div>
                            <div class="col-6">
                                <label style="font-size: 11px;">Y:</label>
                                <input type="number" id="positionY" class="form-control form-control-sm"
                                       value="0" step="1" disabled>
                            </div>
                        </div>
                    </div>

                    <!-- Size (Width, Height) -->
                    <div class="property-section mb-3" id="sizeSection">
                        <label class="form-label mb-1 fw-bold" style="font-size: 12px;">
                            <i class="bi bi-arrows-angle-expand"></i> Kích thước
                        </label>
                        <div class="row g-2">
                            <div class="col-6">
                                <label style="font-size: 11px;">W:</label>
                                <input type="number" id="objectWidth" class="form-control form-control-sm"
                                       value="0" step="1" min="1" disabled>
                            </div>
                            <div class="col-6">
                                <label style="font-size: 11px;">H:</label>
                                <input type="number" id="objectHeight" class="form-control form-control-sm"
                                       value="0" step="1" min="1" disabled>
                            </div>
                        </div>
                    </div>

                    <!-- Rotation -->
                    <div class="property-section mb-3">
                        <label class="form-label mb-1 fw-bold" style="font-size: 12px;">
                            <i class="bi bi-arrow-clockwise"></i> Xoay:
                            <span id="rotationValue" class="badge bg-secondary">0°</span>
                        </label>
                        <input type="range" id="rotation" class="form-range"
                               min="0" max="360" value="0" step="1" disabled>
                    </div>

                    <!-- Màu viền -->
                    <div class="property-section mb-2">
                        <label class="form-label mb-1" style="font-size: 12px;">
                            <i class="bi bi-palette"></i> Màu viền
                        </label>
                        <input type="color" id="colorPicker" class="form-control form-control-sm form-control-color"
                               value="#000000" disabled>
                    </div>

                    <!-- Màu nền -->
                    <div class="property-section mb-2">
                        <label class="form-label mb-1" style="font-size: 12px;">
                            <i class="bi bi-paint-bucket"></i> Màu nền
                        </label>
                        <input type="color" id="fillColorPicker" class="form-control form-control-sm form-control-color"
                               value="#ffffff" disabled>
                    </div>

                    <!-- Độ dày -->
                    <div class="property-section mb-2">
                        <label class="form-label mb-1" style="font-size: 12px;">
                            <i class="bi bi-hr"></i> Độ dày:
                            <span id="strokeWidthValue" class="badge bg-secondary">2</span>
                        </label>
                        <input type="range" id="strokeWidth" class="form-range"
                               min="1" max="20" value="2" disabled>
                    </div>

                    <!-- Độ mờ -->
                    <div class="property-section mb-3">
                        <label class="form-label mb-1" style="font-size: 12px;">
                            <i class="bi bi-brightness-high"></i> Độ mờ:
                            <span id="opacityValue" class="badge bg-secondary">100%</span>
                        </label>
                        <input type="range" id="opacity" class="form-range"
                               min="0" max="1" step="0.1" value="1" disabled>
                    </div>

                    <!-- Lock/Unlock -->
                    <div class="property-section mb-2">
                        <div class="d-grid">
                            <button id="lockToggleBtn" class="btn btn-sm btn-outline-warning" disabled>
                                <i class="bi bi-unlock"></i> <span id="lockToggleText">Khóa di chuyển</span>
                            </button>
                        </div>
                    </div>

                    <!-- Advanced Properties Toggle -->
                    <div class="property-section mt-3">
                        <button class="btn btn-sm btn-outline-secondary w-100" type="button"
                                data-bs-toggle="collapse" data-bs-target="#advancedProperties">
                            <i class="bi bi-gear"></i> Thuộc tính nâng cao
                        </button>

                        <div class="collapse mt-2" id="advancedProperties">
                            <!-- Scale X, Y -->
                            <div class="mb-2">
                                <label class="form-label mb-1" style="font-size: 11px;">
                                    <i class="bi bi-arrows-expand"></i> Scale X:
                                    <span id="scaleXValue" class="badge bg-secondary">1.0</span>
                                </label>
                                <input type="range" id="scaleX" class="form-range"
                                       min="0.1" max="3" value="1" step="0.1" disabled>
                            </div>

                            <div class="mb-2">
                                <label class="form-label mb-1" style="font-size: 11px;">
                                    <i class="bi bi-arrows-expand"></i> Scale Y:
                                    <span id="scaleYValue" class="badge bg-secondary">1.0</span>
                                </label>
                                <input type="range" id="scaleY" class="form-range"
                                       min="0.1" max="3" value="1" step="0.1" disabled>
                            </div>

                            <!-- Skew X, Y -->
                            <div class="mb-2">
                                <label class="form-label mb-1" style="font-size: 11px;">
                                    <i class="bi bi-dice-3"></i> Skew X:
                                    <span id="skewXValue" class="badge bg-secondary">0</span>
                                </label>
                                <input type="range" id="skewX" class="form-range"
                                       min="-1" max="1" value="0" step="0.1" disabled>
                            </div>

                            <div class="mb-2">
                                <label class="form-label mb-1" style="font-size: 11px;">
                                    <i class="bi bi-dice-3"></i> Skew Y:
                                    <span id="skewYValue" class="badge bg-secondary">0</span>
                                </label>
                                <input type="range" id="skewY" class="form-range"
                                       min="-1" max="1" value="0" step="0.1" disabled>
                            </div>

                            <!-- Z-Index -->
                            <div class="mb-2">
                                <div class="d-grid gap-1">
                                    <button id="bringToFrontBtn" class="btn btn-sm btn-outline-primary" disabled>
                                        <i class="bi bi-bring-to-front"></i> Đưa lên trên
                                    </button>
                                    <button id="sendToBackBtn" class="btn btn-sm btn-outline-primary" disabled>
                                        <i class="bi bi-send-to-back"></i> Đưa xuống dưới
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Canvas Area (Adjusted position) -->
            <div class="col-md-10">
                <div class="canvas-area-wrapper">
                    <div id="canvas-container">
                        <div id="container"></div>
                    </div>

                    <!-- Status Bar -->
                    <div class="status-bar">
                        <span id="statusText">Sẵn sàng</span>
                        <span id="connectionStatus" class="badge bg-secondary">Đang kết nối...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ALL MODALS - KEEP EXACTLY THE SAME -->
    <!-- Object Info Modal -->
    <div class="modal fade" id="objectInfoModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông tin đối tượng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="objectInfoForm">
                        <input type="hidden" id="objectId">
                        <div class="mb-3">
                            <label class="form-label">Tên:</label>
                            <input type="text" class="form-control" id="objectName">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mô tả:</label>
                            <textarea class="form-control" id="objectDescription" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Loại:</label>
                            <input type="text" class="form-control" id="objectType" readonly>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="saveObjectInfo">Lưu</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Image Library Modal -->
    <div class="modal fade" id="imageLibraryModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-images"></i> Thư viện hình ảnh
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Hướng dẫn:</strong> Đặt hình ảnh vào thư mục <code>wwwroot/library/</code> để hiển thị ở đây.
                        </div>
                    </div>

                    <div class="mb-3">
                        <input type="text" id="imageSearchBox" class="form-control" placeholder="Tìm kiếm hình ảnh...">
                    </div>

                    <div id="imageLibraryGrid" class="image-library-grid">
                        <div class="text-center p-4">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Đang tải...</span>
                            </div>
                            <p class="mt-2">Đang tải thư viện...</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Text Editor Modal -->
    <div class="modal fade" id="textEditorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-fonts"></i> Chỉnh sửa văn bản
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="textEditorForm">
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-textarea-t"></i> Nội dung:
                            </label>
                            <textarea id="textContent" class="form-control" rows="4"
                                      placeholder="Nhập văn bản..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-type"></i> Font chữ:
                            </label>
                            <select id="textFontFamily" class="form-select">
                                <option value="Arial">Arial</option>
                                <option value="Times New Roman">Times New Roman</option>
                                <option value="Courier New">Courier New</option>
                                <option value="Georgia">Georgia</option>
                                <option value="Verdana">Verdana</option>
                                <option value="Comic Sans MS">Comic Sans MS</option>
                                <option value="Impact">Impact</option>
                                <option value="Tahoma">Tahoma</option>
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="bi bi-type-h1"></i> Cỡ chữ:
                                    <span id="textSizeValue" class="badge bg-secondary">24</span>
                                </label>
                                <input type="range" id="textFontSize" class="form-range"
                                       min="8" max="120" value="24" step="2">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="bi bi-text-paragraph"></i> Giãn dòng:
                                    <span id="lineHeightValue" class="badge bg-secondary">1.2</span>
                                </label>
                                <input type="range" id="textLineHeight" class="form-range"
                                       min="1" max="3" value="1.2" step="0.1">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-palette"></i> Màu chữ:
                            </label>
                            <input type="color" id="textColor" class="form-control form-control-color" value="#000000">
                        </div>

                        <div class="mb-3">
                            <label class="form-label d-block">
                                <i class="bi bi-text-left"></i> Căn lề:
                            </label>
                            <div class="btn-group" role="group">
                                <input type="radio" class="btn-check" name="textAlign" id="alignLeft" value="left" checked>
                                <label class="btn btn-outline-primary btn-sm" for="alignLeft">
                                    <i class="bi bi-text-left"></i> Trái
                                </label>

                                <input type="radio" class="btn-check" name="textAlign" id="alignCenter" value="center">
                                <label class="btn btn-outline-primary btn-sm" for="alignCenter">
                                    <i class="bi bi-text-center"></i> Giữa
                                </label>

                                <input type="radio" class="btn-check" name="textAlign" id="alignRight" value="right">
                                <label class="btn btn-outline-primary btn-sm" for="alignRight">
                                    <i class="bi bi-text-right"></i> Phải
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label d-block">
                                <i class="bi bi-type-bold"></i> Kiểu chữ:
                            </label>
                            <div class="btn-group" role="group">
                                <input type="checkbox" class="btn-check" id="textBold">
                                <label class="btn btn-outline-primary btn-sm" for="textBold">
                                    <i class="bi bi-type-bold"></i> Đậm
                                </label>

                                <input type="checkbox" class="btn-check" id="textItalic">
                                <label class="btn btn-outline-primary btn-sm" for="textItalic">
                                    <i class="bi bi-type-italic"></i> Nghiêng
                                </label>

                                <input type="checkbox" class="btn-check" id="textUnderline">
                                <label class="btn btn-outline-primary btn-sm" for="textUnderline">
                                    <i class="bi bi-type-underline"></i> Gạch dưới
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-eye"></i> Xem trước:
                            </label>
                            <div id="textPreview" class="border rounded p-3 bg-light"
                                 style="min-height: 80px; overflow: hidden;">
                                <span id="previewText">Văn bản mẫu</span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Hủy
                    </button>
                    <button type="button" class="btn btn-primary" id="applyTextBtn">
                        <i class="bi bi-check-circle"></i> Áp dụng
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Map Manager Modal -->
    <div class="modal fade" id="mapManagerModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-map"></i> Quản lý bản đồ
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i>
                                <strong>Hiện tại:</strong> <span id="currentMapName">Chưa chọn map</span>
                                <span id="currentMapId" class="badge bg-secondary ms-2" style="display:none;">ID: 0</span>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <button class="btn btn-primary" onclick="showCreateMapForm()">
                                <i class="bi bi-plus-circle"></i> Tạo map mới
                            </button>
                        </div>
                    </div>

                    <div id="mapListContainer">
                        <div class="text-center p-4">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Đang tải...</span>
                            </div>
                            <p class="mt-2">Đang tải danh sách map...</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Đóng
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Create/Edit Map Modal -->
    <div class="modal fade" id="mapFormModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mapFormTitle">
                        <i class="bi bi-plus-circle"></i> Tạo map mới
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="mapForm">
                        <input type="hidden" id="mapFormId" value="0">

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-card-heading"></i> Tên map: <span class="text-danger">*</span>
                            </label>
                            <input type="text" id="mapFormName" class="form-control"
                                   placeholder="Ví dụ: Bản đồ khu A" required maxlength="200">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-card-text"></i> Mô tả:
                            </label>
                            <textarea id="mapFormDescription" class="form-control" rows="3"
                                      placeholder="Mô tả về map này..." maxlength="500"></textarea>
                            <small class="text-muted">Tối đa 500 ký tự</small>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Hủy
                    </button>
                    <button type="button" class="btn btn-primary" onclick="saveMapForm()">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Canvas Size Settings Modal -->
    <div class="modal fade" id="canvasSizeModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-aspect-ratio"></i> Kích thước Canvas
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Lưu ý:</strong> Thay đổi kích thước canvas không ảnh hưởng đến objects đã vẽ.
                    </div>

                    <h6 class="mb-3">
                        <i class="bi bi-pencil"></i> Tùy chỉnh
                    </h6>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Chiều rộng (px):</label>
                            <input type="number" id="canvasSizeWidth" class="form-control"
                                   min="400" max="10000" step="100" value="1200">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Chiều cao (px):</label>
                            <input type="number" id="canvasSizeHeight" class="form-control"
                                   min="300" max="10000" step="100" value="800">
                        </div>
                    </div>

                    <div class="mb-3 text-center p-3 bg-light rounded">
                        <div id="canvasSizePreview" class="h5 mb-1">1200 × 800 pixels</div>
                        <small id="canvasAspectRatio" class="text-muted">Tỷ lệ: 3:2</small>
                    </div>

                    <hr>

                    <h6 class="mb-3">
                        <i class="bi bi-grid-3x3"></i> Kích thước có sẵn
                    </h6>

                    <div class="row g-2">
                        <div class="col-md-4">
                            <button class="btn btn-outline-secondary btn-sm w-100"
                                    onclick="setCanvasPreset(800, 600)">
                                <div class="fw-bold">Nhỏ</div>
                                <small>800 × 600</small><br>
                                <small class="text-muted">4:3</small>
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button class="btn btn-outline-primary btn-sm w-100"
                                    onclick="setCanvasPreset(1200, 800)">
                                <div class="fw-bold">Trung bình</div>
                                <small>1200 × 800</small><br>
                                <small class="text-muted">3:2</small>
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button class="btn btn-outline-secondary btn-sm w-100"
                                    onclick="setCanvasPreset(1920, 1080)">
                                <div class="fw-bold">Lớn</div>
                                <small>1920 × 1080</small><br>
                                <small class="text-muted">16:9</small>
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button class="btn btn-outline-secondary btn-sm w-100"
                                    onclick="setCanvasPreset(1080, 1920)">
                                <div class="fw-bold">HD Dọc</div>
                                <small>1080 × 1920</small><br>
                                <small class="text-muted">9:16</small>
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button class="btn btn-outline-secondary btn-sm w-100"
                                    onclick="setCanvasPreset(1000, 1000)">
                                <div class="fw-bold">Vuông</div>
                                <small>1000 × 1000</small><br>
                                <small class="text-muted">1:1</small>
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button class="btn btn-outline-secondary btn-sm w-100"
                                    onclick="setCanvasPreset(794, 1123)">
                                <div class="fw-bold">A4 Dọc</div>
                                <small>794 × 1123</small><br>
                                <small class="text-muted">A4</small>
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button class="btn btn-outline-secondary btn-sm w-100"
                                    onclick="setCanvasPreset(1123, 794)">
                                <div class="fw-bold">A4 Ngang</div>
                                <small>1123 × 794</small><br>
                                <small class="text-muted">A4</small>
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button class="btn btn-outline-secondary btn-sm w-100"
                                    onclick="setCanvasPreset(2560, 1080)">
                                <div class="fw-bold">Siêu rộng</div>
                                <small>2560 × 1080</small><br>
                                <small class="text-muted">21:9</small>
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button class="btn btn-outline-secondary btn-sm w-100"
                                    onclick="setCanvasPreset(3840, 2160)">
                                <div class="fw-bold">4K</div>
                                <small>3840 × 2160</small><br>
                                <small class="text-muted">16:9</small>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Hủy
                    </button>
                    <button type="button" class="btn btn-primary" onclick="applyCanvasSize()">
                        <i class="bi bi-check-circle"></i> Áp dụng
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Zoom Controls (Bottom Right) - KEEP EXACTLY THE SAME -->
    <div class="zoom-controls">
        <div class="zoom-display mb-2">
            <i class="bi bi-zoom-in"></i>
            <span id="zoomPercentage">100%</span>
        </div>

        <button class="btn btn-sm btn-light mb-1" onclick="zoomIn()" title="Phóng to (Scroll lên)">
            <i class="bi bi-plus-lg"></i>
        </button>

        <button class="btn btn-sm btn-light mb-1" onclick="zoomOut()" title="Thu nhỏ (Scroll xuống)">
            <i class="bi bi-dash-lg"></i>
        </button>

        <button class="btn btn-sm btn-light mb-1" onclick="zoomReset()" title="100%">
            <i class="bi bi-arrow-clockwise"></i>
        </button>

        <button class="btn btn-sm btn-light mb-1" onclick="zoomFit()" title="Vừa khung">
            <i class="bi bi-arrows-angle-contract"></i>
        </button>

        <button class="btn btn-sm btn-primary" onclick="showCanvasSizeSettings()" title="Cài đặt kích thước">
            <i class="bi bi-gear"></i>
        </button>
    </div>

    <!-- ALL SCRIPTS - KEEP EXACTLY THE SAME -->
    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script>
        window.bootstrapLoaded = typeof bootstrap !== 'undefined';
        if (!window.bootstrapLoaded) {
            console.log('Bootstrap loading from CDN...');
            document.write('<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"><\/script>');
        }
    </script>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script>
        window.jQueryLoaded = typeof jQuery !== 'undefined';
        if (!window.jQueryLoaded) {
            console.log('jQuery loading from CDN...');
            document.write('<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"><\/script>');
        }
    </script>

    <script src="~/lib/konva/konva.min.js"></script>
    <script>
        window.konvaLoaded = typeof Konva !== 'undefined';
        if (!window.konvaLoaded) {
            console.log('Konva loading from CDN...');
            document.write('<script src="https://unpkg.com/konva@8.4.3/konva.min.js"><\/script>');
        }
    </script>

    <script src="~/lib/signalr/signalr.min.js"></script>
    <script>
        window.signalRLoaded = typeof signalR !== 'undefined';
        if (!window.signalRLoaded) {
            console.log('SignalR loading from CDN...');
            document.write('<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"><\/script>');
        }
    </script>

    <script>
        (function waitForLibraries() {
            if (typeof jQuery === 'undefined') {
                console.log('Waiting for jQuery...');
                setTimeout(waitForLibraries, 100);
                return;
            }
            if (typeof Konva === 'undefined') {
                console.log('Waiting for Konva...');
                setTimeout(waitForLibraries, 100);
                return;
            }
            if (typeof signalR === 'undefined') {
                console.log('Waiting for SignalR...');
                setTimeout(waitForLibraries, 100);
                return;
            }

            console.log('✓ All libraries loaded successfully!');
            console.log('jQuery:', typeof jQuery);
            console.log('Konva:', typeof Konva);
            console.log('SignalR:', typeof signalR);

            var script1 = document.createElement('script');
            script1.src = '/js/map.js';
            script1.onload = function() {
                console.log('✓ map.js loaded');

                var script2 = document.createElement('script');
                script2.src = '/js/map-advanced.js';
                script2.onload = function() {
                    console.log('✓ map-advanced.js loaded');
                };
                script2.onerror = function() {
                    console.warn('⚠ map-advanced.js failed to load (optional)');
                };
                document.body.appendChild(script2);
            };
            script1.onerror = function() {
                console.error('✗ map.js failed to load!');
                alert('Lỗi: Không thể load map.js. Vui lòng kiểm tra file.');
            };
            document.body.appendChild(script1);
        })();
    </script>

</body>
</html>
